		awesome
		nitrogen
		dmenu
		rofi
		picom
	)
	# Base Devel
	depends+=(
		keepassxc
		firefox
		gedit
		flameshot # screenshot tool
	)
	# system tools
	depends+=( 
		sddm
		xterm
		alacritty
		fish
		lxappearance # a GTK+ theme switcher
		lxsession # a graphical authentication agent
		thunar-volman # file manager, has many plugins, should be run as a deamon
		gvfs-smb # smb automount support
		gvfs-mtp # phones automount support
		thunar-media-tags-plugin
		ark # archivig tool
		thunar-archive-plugin
		tumbler # file thumbnail support
		ffmpegthumbnailer
		qpwgraph # pipewire audio graph
		pavucontrol # pulse audio config tool
		qjackctl # alsa audio tool
		playerctl # media player controller CLI
		xfce4-settings # Settings manager
		xfce4-power-manager
		light # Program to easily change brightness on backlight-controllers
	)
	# bluetooth
	depends+=(
		bluez
		bluez-utils
		blueman
	)
