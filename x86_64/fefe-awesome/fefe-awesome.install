## arg 1:  the new package version
pre_install() {
	# make backup of files that will be replaced by package files
	cp /etc/xdg/awesome/rc.lua /etc/xdg/awesome/rc.lua.backup
}

## arg 1:  the new package version
post_install() {
	post_upgrade
}

## arg 1:  the new package version
## arg 2:  the old package version
