## arg 1:  the new package version
## arg 2:  the old package version
post_upgrade() {
	## rename package files
	mv -f /etc/xdg/awesome/rc.lua.fefe /etc/xdg/awesome/rc.lua
	# mv -f /etc/xdg/awesome/rc.lua.fefe $HOME/.config/awesome/rc.lua
}

