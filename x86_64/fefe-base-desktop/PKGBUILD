pkgname=fefe-base-desktop
pkgdesc="fefe base meta package for desktop computers"

url="https://github.com/FelixFeuerigel/arch-pkgbuilds"
license=("unknown")
arch=("any")
groups=()
pkgver=0.0.1
pkgver() {
	date +%Y%m%d.%H%M.%S
}
pkgrel=1
epoch=0
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=fefe-base-desktop.install
changelog=
source=(
	"01-fefe-keyboard.conf"
	"alacritty.yml"
)
noextract=()
b2sums=()
validpgpkeys=()

#prepare() {
#}

#build() {
#}

#check() {
#}

package() {
	depends=(
		fefe-base
	)
	# user programms
	depends+=(
		discord
		firefox
		gedit
		keepassxc
		flameshot # screenshot tool
	)
	# gaming softwawre
	depends+=(
		steam
		ttf-liberation # Arial font alternative
	)
	# KDE connect
	depends+=(
		sshfs
		kdeconnect
	)
	# file manager
	depends+=(
		thunar # file manager, has many plugins, should be run as a deamon
		thunar-volman # Automatic management of removeable devices in Thunar
		gvfs-smb # smb automount support
		gvfs-mtp # phones automount support
		thunar-media-tags-plugin # view/edit ID3/OGG tags
		thunar-archive-plugin
		ark # Archiving Tool
		tumbler # file thumbnail support
		ffmpegthumbnailer
	)
	# audio GUI
	depends+=(
		qpwgraph # pipewire audio graph
		pavucontrol # pulse audio config tool
		qjackctl # alsa audio tool
	)
	# settigs programms
	depends+=(
		xfce4-settings # Settings manager
		xfce4-power-manager
		lxappearance # a GTK+ theme switcher
	)
	# terminal
	depends+=(
		xterm
		alacritty
	)
	# login manager
	depends+=( 
		sddm
	)
	# printing
	depends+=(
		cups
		system-config-printer
	)
	#TODO: missing programs for notifications

	install -Dm 0644 01-fefe-keyboard.conf "$pkgdir/etc/X11/xorg.conf.d/01-fefe-keyboard.conf"
	install -Dm 0644 alacritty.yml "$pkgdir/etc/fefe/.config/alacritty/alacritty.yml"
}
