post_install() {
	post_upgrade
}

post_upgrade() {
	# enable Services for autostart
    systemctl enable --now sddm.service

	# move config files to HOME dictonary
	## cp /etc/fefe/.config/alacritty/alacritty.yml home/*all_home_dirs*/.config/alacritty/alacritty.yml
	echo /home/*/.config/alacritty/alacritty.yml | xargs -n 1 cp /etc/fefe/.config/alacritty/alacritty.yml 
}